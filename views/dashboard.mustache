<html>
    <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" >
    <link rel="stylesheet" type="text/css" href="/dashstyle.css">
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Dashboard</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        Statistics
                        </div>
                        <div class="card-body">
                            <table class="table table-dark">
                                <tr>
                                    <td>Total Stocks</td>
                                    <td>Total Brands</td>
                                </tr>
                                <tr>
                                    {{#n1}}<td>{{sum}}</td>{{/n1}}
                                    {{#n2}}<td>{{count}}</td>{{/n2}}
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        
                        <div class="card-body">
                            <a href="/add" class="btn btn-primary">Add Medicines</a>
                            <a href="/meds" class="btn btn-primary">Edit/Delete Medicines</a>
                            <a href="/meds" class="btn btn-primary">View Medicine List</a>

                        </div>
                    </div>
                </div>
            </div>


        </div>


    <!--
        {{#n1}}<h1>{{sum}}</h1>{{/n1}}
        {{#n2}}<h1>{{count}}</h1>{{/n2}}-->
    </body>
</html>